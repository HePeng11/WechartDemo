
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
    <link href="https://res.wx.qq.com/open/libs/weui/1.1.3/weui.css" rel="stylesheet" />
    <style type="text/css">
        .weui-tab__panel {
            box-sizing: border-box;
            height: 100%;
            padding-bottom: 50px;
            overflow: auto;
            -webkit-overflow-scrolling: touch;
        }

        html, body {
            width: 100%;
            height: 100%;
        }
    </style>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
</head>
<body>
    <div class="page__bd" style="height: 100%;">
        <div class="weui-tab">
            <div class="weui-tab__panel">
                <div id="homediv">112121</div>
                <div id="orderdiv" style="display:none">22</div>
                <div id="userinfodiv" style="display:none">
                    @{ 
                        Html.RenderPartial("IndexPage", new Weixin.UnitTest.OutDtos.WxUserInfo());
                    }
                </div>
            </div>
            <div class="weui-tabbar">
                <a href="javascript:;" data-id="homediv" class="weui-tabbar__item weui-bar__item_on">
                    <span style="display: inline-block;position: relative;">
                        <img src="~/Content/Images/身份证.png" alt="" class="weui-tabbar__icon">
                        <span class="weui-badge" style="position: absolute;top: -2px;right: -13px;">8</span>
                    </span>
                    <p class="weui-tabbar__label">主页</p>
                </a>
                <a href="javascript:;" data-id="orderdiv" class="weui-tabbar__item">
                    <span style="display: inline-block;position: relative;">
                        <img src="~/Content/Images/身份证.png" alt="" class="weui-tabbar__icon">
                        <span class="weui-badge weui-badge_dot" style="position: absolute;top: 0;right: -6px;"></span>
                    </span>
                    <p class="weui-tabbar__label">订单</p>
                </a>
                <a href="javascript:;" data-id="userinfodiv" class="weui-tabbar__item">
                    <img src="~/Content/Images/身份证.png" alt="" class="weui-tabbar__icon">
                    <p class="weui-tabbar__label">我</p>
                </a>
            </div>
        </div>
    </div>
</body>
</html>
<script type="text/javascript">
    $(function () {
        $('.weui-tabbar__item').on('click', function () {
            $(this).addClass('weui-bar__item_on').siblings('.weui-bar__item_on').removeClass('weui-bar__item_on');
            $("#" + $(this).data("id")).show().siblings().hide();
        });
    });
</script>